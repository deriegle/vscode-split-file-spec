{
    "name": "open-spec-file",
    "displayName": "open-spec-file",
    "description": "Open spec file for the current open file",
    "version": "0.0.1",
    "publisher": "devinriegle",
    "engines": {
        "vscode": "^1.27.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.splitSpecFile"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "title": "Spec Finder Configuration",
            "properties": {
                "specFinder.javascriptGlob": {
                    "type": "string",
                    "default": "-test.js",
                    "description": "Find javascript files using this glob appended to current file name"
                },
                "specFinder.rubyGlob": {
                    "type": "string",
                    "default": "_spec.rb",
                    "description": "Find ruby files using this glob appended to current file name"
                }
            }
        },
        "keybindings":[
            {
                "command": "extension.splitSpecFile",
                "key": "ctrl+f1",
                "mac": "cmd+f1",
                "when": "editorTextFocus"
            }
        ],
        "commands": [
            {
                "command": "extension.splitSpecFile",
                "title": "Open Split Spec File"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
